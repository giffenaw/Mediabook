<div class="panel panel-default">
  <div class="panel panel-header">
    <%= gravatar_tag post.user.email, size: 20 %><%= post.user.username %> posted this <%= time_ago_in_words(post.created_at) %> ago
    <% if current_user == post.user %>
      <%= link_to "Edit", edit_post_path(post) %> | <%= link_to "X", post, method: :delete %>
    <% end %>
  </div>
  <div class="panel-body">
    <%= post.content %>
  </div>
</div>